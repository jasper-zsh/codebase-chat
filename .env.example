# 数据库配置
DB_PATH=codebase.db

# 代码块处理配置
CHUNK_SIZE=100
OVERLAP=10

# 模型配置
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text
BATCH_SIZE=10

# 重排序配置
USE_RERANKER=true
# RERANKER_PROVIDER 可选: flag_embedding 或 siliconflow
RERANKER_PROVIDER=siliconflow
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# FlagEmbedding客户端配置
FLAG_EMBEDDING_SERVER_URL=http://localhost:8000

# SiliconFlow配置
SILICONFLOW_API_KEY=your_api_key_here

# 翻译配置
USE_TRANSLATOR=true
TRANSLATOR_PROVIDER=ollama
TRANSLATOR_MODEL=qwen2.5:7b

# MCP服务配置
MCP_HOST=0.0.0.0
MCP_PORT=8000

# Ollama客户端配置
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# FlagEmbedding服务端配置
FLAG_EMBEDDING_SERVER_HOST=0.0.0.0
FLAG_EMBEDDING_SERVER_PORT=9000